{
  "title": "mytab",
  "rules": [
    {
      "description": "Holding Tab makes certain keys more accessible.",
      "manipulators": [
        {
          "from": {"key_code": "tab", "modifiers": {"optional": ["any"]}},
          "to": [{"set_variable": {"name": "on", "value": 1}}],
          "to_after_key_up": [{"set_variable": {"name": "on", "value": 0}}],
          "to_if_alone": [{"key_code": "tab"}],
          "type": "basic"
        },
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "p"}, "to": [{"key_code": "delete_or_backspace"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "semicolon"}, "to": [{"key_code": "return_or_enter"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "h"}, "to": [{"key_code": "left_arrow"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "j"}, "to": [{"key_code": "down_arrow"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "k"}, "to": [{"key_code": "up_arrow"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "l"}, "to": [{"key_code": "right_arrow"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "a"}, "to": [{"key_code": "left_arrow"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "s"}, "to": [{"key_code": "down_arrow"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "w"}, "to": [{"key_code": "up_arrow"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "d"}, "to": [{"key_code": "right_arrow"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "1"}, "to": [{"key_code": "quote"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "2"}, "to": [{"key_code": "open_bracket"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "3"}, "to": [{"key_code": "close_bracket"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "4"}, "to": [{"key_code": "backslash"}]},
        {"conditions": [{"type": "variable_if", "name": "on", "value": 1}], "type": "basic", "from": {"modifiers": {"optional": ["any"]}, "key_code": "q"}, "to": [{"key_code": "delete_forward"}]}
      ]
    }
  ]
}
